<cu-custom id="navbar" bgColor="bg-gradual-blue" isBack="{{false}}">
<view slot="backText">返回</view>
<view slot="content">牧江科技</view>
</cu-custom>
<view class="page bg-white">
<view class="cu-bar search bg-white">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="设备SN/ID" confirm-type="search"></input>
  </view>
  <view class="action">
    <button class="cu-btn bg-blue shadow-blur round">搜索</button>
  </view>
</view>
<view class="divLine"></view>
<view class="cu-list menu sm-bordercard-menu">
<view class="cu-item arrow" bindtap="additem">
  <view class="content">
    <text class="cuIcon-add text-grey"></text>
    <text class="text-grey">添加设备</text>
  </view>
</view>
  <scroll-view class="scrollView" style='height: {{scrollViewHeight + "px"}}' scroll-y="true">
    <block  wx:for='{{12}}' wx:key='scroll' wx:for-index='idx'  wx:for-item='item'>
      <view class="itemView">
          <view class="flex  margin-left-sm align-center justify-between">
            <view class="flex-sub margin-top-xs margin-left-xs radius"><view class="list_sn">SN:0054</view></view>
            <view class="flex-sub margin-top-xs radius"><view class="list_sn">ID:90</view></view>
            <view class="flex-sub margin-top-xs radius"><view class="list_state">已激活</view></view>
          </view>

          <view class="flex margin-left-sm justify-between align-center">
            <view class="margin-bottom radius "><view class="list_time">2019-05-21 12:00:00</view></view>
            <view class="margin-bottom radius margin-right-lg">
            <button class="cu-btn bg-blue sm edit_item" bindtap="edititem">
            <text class="edit_item">处理
            </text>
            </button>
            </view>
          </view>
      </view>
    </block>
  </scroll-view>
</view>
</view>